<%= erb(:partial2)%>
<div class="container">
  <h1><%= @scene.name %></h1>
<h3><%= @scene.description %></h3>

<p>
  <%= @@div %>
</p>

<br>
<br>

<% if @scene.options.any? %>
  <form class="" action="/characters/<%= @character.id %>/scenes/<%= @scene.id %>/interpret" method="get">
    <input type="text" name="text" id="text" autofocus>
    <button type="submit">Submit</button>
  </form>
<% else %>
  <form action="/characters/<%= @character.id%>/scenes/<%= @scene.id %>/rating" method='post'>
    <input type="radio" name="rating" value=1>*<br>
    <input type="radio" name="rating" value=2>**<br>
    <input type="radio" name="rating" value=3>***<br>
    <input type="radio" name="rating" value=4>****<br>
    <input type="radio" name="rating" value=5>*****<br>
    <button type="submit">Submit</button>
  </form>
  <h4><a href="/users/<%= @user.id %>">Start Over</a></h4>
<% end %>
</div>
